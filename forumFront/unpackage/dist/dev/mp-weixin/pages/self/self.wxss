.user .top {
  height: 300rpx;
  background: #bbb;
  padding: 0 30rpx;
  padding-top: 25px;
  position: relative;
  display: flex;
  align-items: center;
}
.user .top .group {
  position: relative;
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  color: #fff;
}
.user .top .group .userinfo {
  display: flex;
  width: 100%;
  align-items: center;
}
.user .top .group .userinfo .pic {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
}
.user .top .group .userinfo .pic image {
  width: 100%;
  height: 100%;
}
.user .top .group .userinfo .text {
  padding-left: 20rpx;
}
.user .top .group .userinfo .text .nickname {
  font-size: 44rpx;
  font-weight: 600;
}
.user .top .group .userinfo .text .year {
  font-size: 26rpx;
  opacity: 0.6;
  padding-top: 5rpx;
}
.user .top .group .more .iconfont {
  font-size: 40rpx;
}
.user .top .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.user .top .bg image {
  width: 100%;
  height: 100%;
  -webkit-filter: blur(20px);
          filter: blur(20px);
  -webkit-transform: scale(2);
          transform: scale(2);
  opacity: 0.5;
}
.user .main {
  width: 100%;
  min-height: 200rpx;
  background: #fff;
  border-radius: 30rpx;
  -webkit-transform: translateY(-30rpx);
          transform: translateY(-30rpx);
  padding: 30rpx 0;
}
.user .main .info {
  padding: 10rpx 30rpx;
  display: flex;
  font-size: 30rpx;
}
.user .main .info .item {
  padding-right: 20rpx;
  color: #888;
}
.user .main .info .item text {
  font-weight: 600;
  color: #333;
}
.user .main .list .group {
  padding: 15rpx 30rpx;
  border-bottom: 15rpx solid #f4f4f4;
}
.user .main .list .group .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  font-size: 36rpx;
  color: #555;
  border-bottom: 1rpx solid #f8f8f8;
}
.user .main .list .group .item .left {
  display: flex;
  align-items: center;
}
.user .main .list .group .item .left .iconfont {
  font-size: 38rpx;
  margin-right: 10rpx;
}
.user .main .list .group .item .right .iconfont {
  font-size: 26rpx;
}
.user .main .list .group .item:last-child {
  border: none;
}
.user .main .list .group:last-child {
  border: none;
}

